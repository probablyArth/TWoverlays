{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext"
  },
  "ts-node": { "esm": true },
  "include": ["./*.js", "src/**/*.ts"]
}
